@model GarmentStreet.Models.ViewModels.VariationViewModel

<form method="post" asp-action="Upsert">
    <input asp-for="Variation.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">@(Model.Variation.Id!=0?"Update":"Create") Variation</h2>
            <hr />

        </div>
        <div class="mb-3">
            <label asp-for="Variation.Name"></label>
            <input asp-for="Variation.Name" class="form-control" />
            <span asp-validation-for="Variation.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Variation.CategoryId"></label>
            <select asp-for="Variation.CategoryId" asp-items="Model.CategoryList" class="form-select">
                <option disabled selected>--Select Category--</option>
            </select>
            <span asp-validation-for="Variation.CategoryId" class="text-danger"></span>
        </div>
        @if(Model.Variation.Id!=0)
        {
            <button type="submit" class="btn btn-outline-primary" style="width:150px">Update</button>
        }
        else
        {
            <button type="submit" class="btn btn-outline-primary" style="width:150px">Create</button>
        }
        <a asp-controller="Variation" asp-action="Index" class="btn btn-outline-primary" style="width:200px">
            Back to List
        </a>

    </div>

</form>

@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }